# Relay Node Environment Configuration
# 
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# Your wallet private key (required)
# This wallet will receive MCT rewards for relaying messages
RELAY_PRIVATE_KEY=

# Optional: Custom RPC endpoint
# RELAY_RPC_URL=https://rpc.ramestta.com

# Optional: Custom configuration file path
# MUMBLECHAT_CONFIG=./config.json

# Optional: Custom keystore path
# MUMBLECHAT_KEYSTORE=./keystore

# Optional: Log level (debug, info, warn, error)
# LOG_LEVEL=info

# Optional: Public IP (auto-detected if not set)
# PUBLIC_IP=1.2.3.4
