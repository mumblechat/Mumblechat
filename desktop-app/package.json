{
  "name": "mumblechat-relay",
  "version": "4.0.0",
  "description": "MumbleChat Relay Node - Earn MCT tokens by relaying messages",
  "main": "main.js",
  "author": "MumbleChat Protocol",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "ws": "^8.14.2",
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.mumblechat.relay",
    "productName": "MumbleChat Relay",
    "copyright": "Copyright Â© 2024 MumbleChat Protocol",
    "files": [
      "**/*",
      "!**/*.md"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": false
    },
    "dmg": {
      "icon": "assets/icon.icns",
      "backgroundColor": "#0a0a0f",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["AppImage", "deb"],
      "category": "Network"
    }
  }
}
