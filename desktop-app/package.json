{
  "name": "mumblechat-relay",
  "version": "4.0.0",
  "description": "MumbleChat Relay Node - Earn MCT tokens by helping power the decentralized messaging network",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "MumbleChat Protocol",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.mumblechat.relay",
    "productName": "MumbleChat Relay",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
