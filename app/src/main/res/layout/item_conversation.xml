<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/mumblechat_card"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Avatar -->
        <FrameLayout
            android:id="@+id/avatarContainer"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/avatarBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_avatar_circle" />

            <TextView
                android:id="@+id/textAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="55" />

            <!-- Online Status Indicator -->
            <View
                android:id="@+id/onlineIndicator"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bg_online_indicator"
                android:visibility="gone"
                tools:visibility="visible" />

        </FrameLayout>

        <!-- Name/Address -->
        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="middle"
            android:maxLines="1"
            android:textColor="@color/mumblechat_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/textLastMessage"
            app:layout_constraintEnd_toStartOf="@id/textTime"
            app:layout_constraintStart_toEndOf="@id/avatarContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="0xa6c2...e755" />

        <!-- Last message preview -->
        <TextView
            android:id="@+id/textLastMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/mumblechat_text_secondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/badgeMembers"
            app:layout_constraintEnd_toStartOf="@id/indicatorContainer"
            app:layout_constraintStart_toEndOf="@id/avatarContainer"
            app:layout_constraintTop_toBottomOf="@id/textName"
            tools:text="hello sir" />

        <!-- Group Members Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/badgeMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            app:cardBackgroundColor="@color/mumblechat_surface"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/avatarContainer"
            app:layout_constraintTop_toBottomOf="@id/textLastMessage"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_group"
                    app:tint="@color/mumblechat_primary"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/textMemberCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/mumblechat_primary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    tools:text="2 MEMBERS" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Time -->
        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mumblechat_text_tertiary"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textName"
            tools:text="01:45" />

        <!-- Indicator Container (unread badge, pinned, muted) -->
        <LinearLayout
            android:id="@+id/indicatorContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/textLastMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textLastMessage">

            <!-- Pinned Icon -->
            <ImageView
                android:id="@+id/iconPinned"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_pin"
                android:visibility="gone"
                app:tint="@color/mumblechat_text_tertiary"
                android:contentDescription="@null"
                tools:visibility="gone" />

            <!-- Muted Icon -->
            <ImageView
                android:id="@+id/iconMuted"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_mute"
                android:visibility="gone"
                app:tint="@color/mumblechat_text_tertiary"
                android:contentDescription="@null"
                tools:visibility="gone" />

            <!-- Unread Badge -->
            <TextView
                android:id="@+id/badgeUnread"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_badge_circle"
                android:gravity="center"
                android:textColor="@color/mumblechat_background"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="5"
                tools:visibility="gone" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
